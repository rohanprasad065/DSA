#include <bits/stdc++.h>

using namespace std;

int main()
{
    int a,i,b,c,d=0;
    cin>>a;
    vector <int> v;
    for (i=0;i<a;i++)
    {
        cin>>b;
        v.push_back(b);
        
    }
    c=v[0];
    for(i=0;i<a;i++)
    {
        if (c<v[i])
        {
            c=v[i];
            
        }
    }
    
    for (i=0;i<a;i++)
    {
        if(c==v[i])
        {
            d++;
        
        }
    }
    
    cout<<d;
}
